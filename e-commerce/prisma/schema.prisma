generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal  @db.Decimal(10, 2) // Preis mit maximal 10 Stellen und 2 Dezimalstellen
  quantities  Int      // Nur ganze Zahlen erlaubt
  imageUrl    String
  createdAt   DateTime @default(now())
}